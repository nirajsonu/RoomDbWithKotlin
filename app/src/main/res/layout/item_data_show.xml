<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:padding="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:id="@+id/serial_number"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="italic"
        android:layout_marginStart="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="ID:-"
        >
    </TextView>

    <TextView
        android:id="@+id/id_value_txt"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="ID"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/serial_number"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    </TextView>
    <TextView
        android:id="@+id/roll_number"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textStyle="italic"
        android:textSize="20sp"
        android:layout_marginStart="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/serial_number"
        android:text="Roll no:-"
        >
    </TextView>

    <TextView
        android:id="@+id/roll_number_value"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:textStyle="bold"
        android:textSize="20sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/roll_number"
        app:layout_constraintTop_toBottomOf="@+id/id_value_txt"
        android:text="Roll No"
        >
    </TextView>

    <TextView
        android:id="@+id/name_txt"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/roll_number"
        android:layout_marginStart="50dp"
        android:text="Name :-"
        android:textSize="20sp"
        >
    </TextView>

    <TextView
        android:id="@+id/name_value"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:textStyle="bold"
        android:textSize="20sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/roll_number"
        app:layout_constraintTop_toBottomOf="@+id/roll_number_value"
        android:text="Name"
        >
    </TextView>

    <TextView
        android:id="@+id/created_date_text"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name_value"
        android:layout_marginStart="50dp"
        android:text="Date :-"
        android:textSize="20sp"
        >
    </TextView>
    <TextView
        android:id="@+id/date_value"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:textStyle="bold"
        android:textSize="20sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/roll_number"
        app:layout_constraintTop_toBottomOf="@+id/name_value"
        android:text="Date"
        >
    </TextView>

    <TextView
        android:id="@+id/is_present_text"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/created_date_text"
        android:layout_marginStart="50dp"
        android:text="P/A :-"
        android:textSize="20sp"
        >
    </TextView>

    <TextView
        android:id="@+id/present_value_txt"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:textStyle="bold"
        android:textSize="20sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/roll_number"
        app:layout_constraintTop_toBottomOf="@+id/date_value"
        android:text="P"
        >
    </TextView>

</androidx.constraintlayout.widget.ConstraintLayout>